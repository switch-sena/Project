                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.GeneroUsua, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.GeneroUsua, (SelectList)ViewBag.Generos, "-- Selecciona un genero --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GeneroUsua, "", new { @class = "text-danger" })

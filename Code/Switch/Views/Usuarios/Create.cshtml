                    @Html.LabelFor(model => model.NombreUsua, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NombreUsua, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreUsua, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.ApellidoUsua, htmlAttributes: new { @class = "control-label" })

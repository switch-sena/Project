@model Switch.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "my-custom-form-class", @style = "color: black; padding: 4%;", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />

